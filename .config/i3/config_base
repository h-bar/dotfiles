# vim: filetype=i3config

## Body

# Startup
exec --no-startup-id setxkbmap -layout tr
exec --no-startup-id compton -b
exec_always --no-startup-id feh --bg-fill ~/.config/wall.png
exec_always --no-startup-id bash ~/.config/polybar/launch.sh
exec --no-startup-id dunst
exec --no-startup-id mopidy
exec --no-startup-id unclutter
exec --no-startup-id parcellite
exec --no-startup-id nm-applet
exec --no-startup-id flameshot
exec --no-startup-id udiskie --smart-tray

for_window [class=".*"] border pixel 1

smart_borders on

# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #9108a0 #ffffff #b301c6   #790287
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

# Core bindings
bindsym $mod+Return 		exec $term

bindsym $mod+Shift+space 	floating toggle

bindsym $mod+Shift+Escape 	exec bash ~/.scripts/prompt "Are you sure you want to leave i3?" "i3-msg exit"
bindsym $mod+Shift+BackSpace	exec bash ~/.scripts/prompt "Are you sure you want to reboot?" "reboot"

bindsym $mod+q			kill

bindsym $mod+f			fullscreen toggle
bindsym $mod+o			sticky toggle
bindsym $mod+t			split toggle

bindsym $mod+w		exec --no-startup-id $browser1
bindsym $mod+Shift+w  exec --no-startup-id $browser2

bindsym $mod+r 			exec $term -e ranger
bindsym $mod+Shift+r 			exec $file2

bindsym $mod+Shift+t		gaps inner current set 15; gaps outer current set 0
bindsym $mod+Shift+d		gaps inner current set 0; gaps outer current set 0

bindsym $mod+Shift+y  exec --no-startup-id "bash ~/.scripts/i3resize left"
bindsym $mod+Shift+u  exec --no-startup-id "bash ~/.scripts/i3resize down"
bindsym $mod+Shift+I  exec --no-startup-id "bash ~/.scripts/i3resize up"
bindsym $mod+Shift+o  exec --no-startup-id "bash ~/.scripts/i3resize right"

bindsym $mod+i 			exec $term -e htop

bindsym $mod+Shift+a		exec pavucontrol

bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s		gaps inner current minus 5

bindsym Mod1+space		exec --no-startup-id dmenu_run

bindsym $mod+Mod1+g		exec --no-startup-id gimp; workspace $ws4
bindsym $mod+Mod1+k		exec --no-startup-id krita; workspace $ws4

bindsym $mod+h			focus left
bindsym $mod+Shift+h		move left 30
bindsym $mod+j			focus down
bindsym $mod+Shift+j		move down 30
bindsym $mod+k			focus up
bindsym $mod+Shift+k		move up 30
bindsym $mod+l			focus right
bindsym $mod+Shift+l		move right 30

bindsym $mod+z			gaps outer current plus 5
bindsym $mod+Shift+z		gaps outer current minus 5

bindsym $mod+x			exec --no-startup-id ~/.config/i3/lock.sh
bindsym $mod+Shift+x		exec bash ~/.scripts/prompt "Are you sure you want to shutdown?" "shutdown -P 0"

bindsym $mod+m 			exec --no-startup-id $term -e ncmpcpp

# Workspace
bindsym $mod+Tab		workspace back_and_forth

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

## switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

## move focused container to workspace
bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6
bindsym $mod+Shift+7	move container to workspace $ws7
bindsym $mod+Shift+8	move container to workspace $ws8
bindsym $mod+Shift+9	move container to workspace $ws9
bindsym $mod+Shift+0	move container to workspace $ws10

for_window [class="^gimp$"] move workspace $ws4
for_window [class="^krita$"] move workspace $ws4
for_window [class="^Steam$" title="*"] move workspace $ws10
for_window [workspace=$ws10] floating enable

for_window [title="Default - Wine desktop"] floating enable


## Screen Configuration
workspace $ws1 output $S1
workspace $ws2 output $S1
workspace $ws3 output $S1
workspace $ws4 output $S1
workspace $ws5 output $S1
workspace $ws6 output $S1
workspace $ws7 output $S1
workspace $ws10 output $S1
workspace $ws8 output $S2
workspace $ws9 output $S2


# Function Buttons
bindsym $mod+F1		reload
bindsym $mod+F2		restart
bindsym $mod+F3		exec --no-startup-id bash ~/.scripts/displayselect
bindsym $mod+F9		exec --no-startup-id bash ~/.scripts/dmenumount
bindsym $mod+F10	exec --no-startup-id bash ~/.scripts/dmenuumount

# Arrow Keys
bindsym $mod+Left		focus left
bindsym $mod+Down		focus down
bindsym $mod+Up			focus up
bindsym $mod+Right 		focus right
bindsym $mod+Shift+Left		move left
bindsym $mod+Shift+Down		move down
bindsym $mod+Shift+Up		move up
bindsym $mod+Shift+Right 	move right


# Media Keys

bindsym XF86AudioRaiseVolume exec --no-startup-id pulsemixer --change-volume +5
bindsym XF86AudioLowerVolume exec --no-startup-id pulsemixer --change-volume -5
bindsym XF86AudioMute exec --no-startup-id pulsemixer --toggle-mute

bindsym shift+XF86AudioRaiseVolume exec --no-startup-id pulsemixer --change-volume +20%
bindsym shift+XF86AudioLowerVolume exec --no-startup-id pulsemixer --change-volume -20%

bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pulsemixer --change-volume +1%
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pulsemixer --change-volume -1%


## Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness


## Media player controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioStop exec mpc stop
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev


## For screenshots and recording
bindsym Print 		exec --no-startup-id xfce4-screenshooter -f -s ~/Pictures/Screenshots
bindsym Shift+Print exec --no-startup-id xfce4-screenshooter -w -s ~/Pictures/Screenshots
bindsym Ctrl+Print	exec --no-startup-id xfce4-screenshooter -r -s ~/Pictures/Screenshots
